<!-- 
    node - description of the content item
    -->
<component name="DescriptionVideo" extends="LayoutGroup">
    <interface>
        <!-- Alias to Title label -->
        <field id="Title" type="node" alias=""/>

        <field id="SubTitle" type="node" alias=""/>

        <!-- Alias to Description label -->
        <field id="Description" type="node" alias=""/>

        <!-- Alias to StarRating label -->
        <field id="StarRating" type="node" alias=""/>

        <!-- Alias to UserStarRating label -->
        <field id="UserStarRating" type="node" alias=""/>

        <!-- Alias to ReleaseDate label -->
        <field id="ReleaseDate" type="node" alias=""/>

        <!-- Content node -->
        <field id="Content" type="node" onChange="OnContentChanged"/>
    </interface>
    
    <!-- main handler -->
    <script type="text/brightscript" uri="pkg:/source/StringUtility.brs" />
    <script type="text/brightscript" uri="pkg:/components/screens/Description/DescriptionVideo.brs" />
    
    <children>
        
        <Label
            id="Title"
            color="0xFFFFFF"
            text=""
            font="font:LargeBoldSystemFont" />

        <Label
            id="SubTitle"
            color="0xFFFFFF"
            text=""
            font="font:MediumBoldSystemFont" />
            
        <Label
            id="ReleaseDate"
            color="0xFFFFFF"
            text=""/>
        
        <Label
            id="Description"
            color="0xFFFFFF"
            wrap="true"
            width="1100"
            height="300"
            lineSpacing="3"
            text=""/>
    </children>

</component> 