<!-- node that renders Grid Screen 
    handles bookmark buttons
    handles start of video playback
 -->
<component name="VideosScreen" extends="Group" initialFocus="RowList">
    <interface>
        <field id="host" type="string" />
        <!-- Grid Content Node -->
        <field id="content" type="node" alias="RowList.content" onChange="onContentChange"/>
        
        <!-- Row item selection handler -->
        <field id="rowItemSelected" type="intarray" alwaysnotify="true" alias="RowList.rowItemSelected"/>
        
        <!-- Row item focused handler -->
        <field id="itemFocused" type="intarray" alias="RowList.rowItemFocused" onChange="OnItemFocused"/>

        <!-- Interface to focused item (Content Node)--> 
        <field id="focusedContent"  type="node"/>
    </interface>
    
    <!-- main handler -->
    <script type="text/brightscript" uri = "pkg:/source/StringUtility.brs" />
    <script type="text/brightscript" uri="pkg:/components/screens/Screens/Videos/VideosScreen.brs" />
    <script type="text/brightscript" uri="pkg:/components/screens/Screens/Videos/VideosScreenParse.brs" />
    <children>
        <!-- <FadingBackground
            id="Background"
			width="1280"
			height="720"
            color="0xAAAAAA"
            ShadeOpacity="0.8"/> -->
           
        <RowList
            id="RowList"
            focusBitmapUri="pkg:/images/focus_grid.9.png"
			translation="[-25, 372]"
			itemSize="[1327, 218]"
			numRows="2"
			itemSpacing="[13, 55]"
			focusXOffset="[147]"
			rowFocusAnimationStyle="fixedFocusWrap"
			rowItemSize="[[147, 218]]"
			rowItemSpacing="[[16.5, 3]]"
			showRowLabel="true"
			showRowCounter="true"
			rowLabelOffset="[[147, 15]]"
            />
            
        <Poster
			translation="[0, 650]"
            uri="pkg:/images/BG_dark_down.png"
            width="2000"
            height="95" />

        <DescriptionVideo
            id="Description"
			translation="[116, 60]"
            itemSpacings="[7,17]"/>
           
    </children>
</component>