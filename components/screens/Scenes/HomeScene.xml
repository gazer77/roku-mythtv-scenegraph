<?xml version="1.0" encoding="utf-8" ?> 
<component name="HomeScene" extends="Scene">
    
    <interface>
        <field id="selectedMenu" type="node" alias="buttonMenu.selectedMenu" alwaysNotify="true" />
        <field id="onContentOptionsDialogButtonSelected" type="int" alias="contentOptionsDialog.buttonSelected" onChange="OnContentOptionsDialogButtonSelected" alwaysNotify="true" />
        <field id="onDeleteDialogButtonSelected" type="int" alias="deleteDialog.buttonSelected" onChange="OnDeleteDialogButtonSelected" alwaysNotify="true" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/screens/Scenes/HomeScene.brs" />
    
    <children>
        <Poster
            translation="[119, 18]"
            uri="pkg:/images/overhangLogo_small.png"
            width="90"
            height="32"  />

        <RecordingsScreen id="recordingsScreen" visible="false" />
        <VideosScreen id="videosScreen" visible="false" />
        <SettingsScreen id="settingsScreen" visible="false" translation="[150,200]" />

        <rectangle color="0x000000C4" width="90" height="720" translation="[20, 0]" />
        <MenuGroup id="buttonMenu" horizAlignment="left" itemSpacings="25" translation="[35,100]" />

        <Video
            id="videoPlayer"
            visible="false"
            translation="[0, 0]"
            width="1280"
            height="720" />

        <Dialog id="contentOptionsDialog" title="Options" visible="false" buttons="[&quot;Play&quot;,&quot;Delete&quot;]" />
        <Dialog id="deleteDialog" title="Delete?" visible="false" buttons="[&quot;Yes&quot;,&quot;No&quot;]" />

    </children>
</component>
