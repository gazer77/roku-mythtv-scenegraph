        <field id="onDialogButtonSelected" type="int" alias="dialog.buttonSelected" onChange="OnDialogButtonSelected" alwaysNotify="true" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/screens/Scenes/HomeScene.brs" />
    
